<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script>
        function download()
        {
            const fileID = document.getElementById("fileID").value;
            location.href =  "dl.gudmunduro.com/" + fileID;
        }
    </script>
    <style>
        html {
            padding: 0;
            margin: 0;
        }
        body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            background: linear-gradient(#2196F3, #0D47A1);
        }
        .title {
            color: white;
            text-align: center;
            margin: 0;
            margin-top: 60px;
            font-family: 'Verdana';
            font-size: 1.5em;
        }
        
        .downloadForm {
            display: flex;
            flex-flow: row wrap;
            justify-content: center;
            width: 280px;
            height: 80px;
            margin: 20px auto;
            background-color: white;
            border-radius: 3px;
            box-shadow: 0 0 3px 1px rgba(255, 255, 255, 0.152);
        }
        .downloadForm input {
            margin: 22px 7px;
            height: 30px;
            width: 150px;
            font-size: 0.9em;
            border: 2px solid #E0E0E0;
            transition: border-color 0.2s ease-out;
        }
        .downloadForm input:focus {
            border-color: #2196F3;
        }
        .downloadForm a {
            margin: 22px 0;
            color: white;
            background-color: #2196F3;
            border-radius: 5px;
            padding: 6px 5px;
            height: 18px;
            transition: background-color 0.2s ease-out;
        }
        .downloadForm a:hover {
            cursor: default;
            background-color: #1976D2;
        }
        .downloadForm a:active {
            background-color: #0D47A1;
        }
    </style>
    <title>Download site</title>
</head>
<body>
    <p class="title">Download site</p>
    <span class="downloadForm">
            <input type="text" id="fileID" placeholder="File ID" />
            <a onclick="download()">Download</a>
    </span>

</body>
</html>