<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <style>
        html {
            padding: 0;
            margin: 0;
        }
        body {
            display: block;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            background: linear-gradient(#ef5350, #b71c1c);
        }
        .firstDiv {
            margin-top: 0;
            width: 100vw;
            height: 10px;
        }
        .title {
            display: block;
            color: white;
            text-align: center;
            margin: 0;
            margin-top: 50px;
            font-family: 'Verdana';
            font-size: 1.5em;
        }
        
        .errorForm {
            display: flex;
            flex-flow: row wrap;
            justify-content: center;
            width: 280px;
            height: 80px;
            margin: 20px auto;
            background-color: white;
            border-radius: 3px;
            box-shadow: 0 0 3px 1px rgba(255, 255, 255, 0.152);
        }
        .errorForm p {
            color: black;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
        }
    </style>
    <title>Download site</title>
</head>
<body>
    <div class="firstDiv"></div>
    <p class="title">Error #(status)</p>
    <span class="errorForm">
            <p>#(statusMessage)</p>
    </span>

</body>
</html>